<div class="col">
    <div class="product shadow-sm rounded bg-white overflow-hidden d-flex w-100 position-relative">
        <img src="/public/img/banner-placeholder.webp" alt="placeholder">
        <!-- Gw lagi malas banget fix yang ini jadi gw pake workaround ini aja -->
        <a href="{{ product.url }}">
            <img class="lazy position-absolute top-0 start-0 z-1" data-src="{% gotoCDN "/img/banners/" + product.data.code + ".webp" %}" alt="{{ product.data.pageTitle }}" height="100%">
        </a>
        
        <a class="p-2 w-100 text-decoration-none text-black" href="{{ product.url }}">
            <h5>{{ product.data.pageTitle }}</h5>
            <span class="badge text-white bg-color-primary">{{ product.data.developer }}</span>
            <hr>
            
            <div class="small">
                <span>Penerbit: </span>
                <span class="badge bg-color-primary">{{ product.data.publisher }}</span>
                <br>

                <span>Rating: </span>
                {% addRating product.data.rating, product.data.censored %}
                <br>

                <span>Status: </span>
                {%- switch product.data.status -%}
                    {%- case -1 -%}
                        <span class="badge text-bg-danger">Dropped</span>
                    {%- case 0 -%}
                        <span class="badge text-bg-dark">Planned</span>
                    {%- case 1 -%}
                        <span class="badge text-bg-warning">On Hold</span>
                    {%- case 2 -%}
                        <span class="badge text-bg-info">In Progress</span>
                    {%- case 3 -%}
                        <span class="badge text-bg-success">Released</span>
                    {%- default -%}
                        <span class="badge text-bg-dark">Planned</span>
                {% endswitch %}
            </div>
        </a>
    </div>
</div>
