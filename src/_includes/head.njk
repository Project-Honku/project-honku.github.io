---
title: Project Honku
description: Kami menerjemahkan visual novel karena kami gabut
image: public/img/logo.webp
baseURL: https://honku.aozora.my.id
---

{% set url = baseURL + page.url %}

{% set outDescription %}
    {%- if pageDescription -%}
        {{ pageDescription }}
    {%- else -%}
        {{ description }}
    {%- endif -%}
{% endset %}

{% set outTitle %}
    {%- if pageTitle -%}
        {{ pageTitle + " | " + title }}
    {%- else -%}
        {{ title }}
    {%- endif -%}
{% endset %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="/public/img/favicon.ico" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles/index.css">
    {%- if pageTitle -%}
        <link rel="stylesheet" href="/styles/page.css">
    {%- endif -%}

    <!-- Primary Meta Tags -->
    <title>{{ outTitle }}</title>
    <meta name="title" content="{{ outTitle }}" />
    <meta name="description" content="{{ outDescription }}" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ url }}" />
    <meta property="og:title" content="{{ outTitle }}" />
    <meta property="og:description" content="{{ outDescription }}" />
    <meta property="og:image" content="{{ baseURL + "/" + image }}" />

    <!-- Twitter -->
    <meta property="twitter:url" content="{{ url }}" />
    <meta property="twitter:title" content="{{ outTitle }}" />
    <meta property="twitter:description" content="{{ outDescription }}" />
    <meta property="twitter:image" content="{{ baseURL + "/" + image }}" />
</head>
<body class="bg-light">
    {% if not pageTitle %}
    <div class="loading loading-front">
        <img src="/public/img/logo.webp" alt="Logo" width="80" style="animation: moreSpinner 1.8s infinite ease-in-out;">
    </div>
    <div class="loading loading-mid"></div>
    <div class="loading loading-back"></div>
    <script>
        window.onload = async () => {
            const loadings = document.querySelectorAll(".loading");

            loadings[0].classList.add("loaded");
            await delay()
            loadings[1].classList.add("loaded");
            await delay()
            loadings[2].classList.add("loaded");
        }
    
        function delay() {
            return new Promise(resolve => setTimeout(resolve, 70));
        }
    </script>
    {% endif %}

    {{ content | safe }}
</body>
</html>